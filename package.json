{
  "name": "nested",
  "displayName": "Nested",
  "description": "A VSCode extension for nesting and un-nesting items in Markdown.",
  "version": "0.0.2",
  "publisher": "AdamOvera",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:nested.addIndent",
    "onCommand:nested.removeIndent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nested.addIndent",
        "title": "Add 4 Spaces to Selected Lines"
      },
      {
        "command": "nested.removeIndent",
        "title": "Remove 4 Spaces from Selected Lines"
      }
    ],
    "keybindings": [
      {
        "command": "nested.addIndent",
        "key": "ctrl+shift+space", 
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      },
      {
        "command": "nested.removeIndent",
        "key": "ctrl+shift+backspace", 
        "mac": "cmd+shift+backspace",
        "when": "editorTextFocus"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamovera/nested.git"
  },
  "icon": "images/nested-logo.png",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
